<!DOCTYPE html>
<html lang="en">
<%- include('header') -%> 
<body>
    <div class="box" id="heading">
        <h1><%=listTitle %></h1>
    </div>

    <div class="box">
        <%newItems.forEach(function(newItem){ %>
            <form class ="item" action="/delete" method="post">
                <div class="item">
                    <input type="checkbox"  name="checkedbox" value ='<%=newItem._id%>' onChange="this.form.submit()">
                    <p><%=newItem.name%></p>   
                </div>
                <input type="hidden" name="listName" value="<%=listTitle%>">
            </form>
        <% }); %> 
            <form class="box" action='/' method='POST'>
                <input type="text" name="addItem" placeholder="New Item" >
                <button type ="submit" name="list" value ="<%= listTitle %> ">+</button>
           </form>

    </div>
    
    
  <%-include('footer')  -%>   
</body>

</html>